<br />

<div class="booyah-box col-10 offset-1">
  <br />
  <h1 class="text-center" />Learn Something New Today</h1>
  <br />
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center course-catalog"><%= link_to course.title, course_path(course) %></h2>
    <br />
    <div class="row">
      <% if course.image.present? %>
        <div class="col-sm-3 col-12">
          <%= image_tag course.image.url, class: 'img-fluid' %>
        </div>
      <% end %>
      <div class="col-sm-7 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-2 col-12 text-center">
        <%= link_to 'More Details', course_path(course), class: 'btn btn-success btn-large' %>
      </div>
    </div>
    <br class='clr'>
  <% end %>
</div>